!!! 5
%html
  %head
    %title Fruitful Minds
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  :css
    #header span{
      font-weight: 500;
      position: relative;
    }
    #title{
      font-size: x-large;
      top: -10px;
    }
    #subtitle{
      font-size: large;
      top: -10px;
    }
    #survey_options p{
      margin-bottom: -8px;
    }

  %body
    %span#header
      %span
        = image_tag("fm_icon.jpg", :height => "45", :alt => "image not found")
      %span
        %span#title Fruitful Minds: 
        %span#subtitle 
          =@subtitle
    - if @current_user and @school
      %div#survey_options
        %p= "County: #{@school.county}"
        %p= "City: #{@school.city}"
        %p= "School Name: #{@school.name}"
    %br
    %br

    - if @current_user
      = link_to "Log Out", logout_path, :id => "log_out"
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      = yield
