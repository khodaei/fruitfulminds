!!! 5
%html
  %head
    %title Fruitful Minds
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body
    %h2.title Fruitful Minds
    - if @current_user
      = link_to "Log Out", logout_path
    #main
      - if flash[:notice]
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        #warning.message= flash[:warning]
      = yield
