- @subtitle = "Edit Postsurvey Results"
- section_and_num_questions = {1 => 2, 2 => 4, 3 => 6, 4 => 3, 5 => 2, 6 => 4}

%span
  = form_for @postsurvey_fields, :url => {:action => :update} do |f|
    = render :partial => "presurveys/sections", :locals => {:f => f, :section_and_num_questions => section_and_num_questions}
    = render :partial => "presurveys/efficacy", :locals => {:num_questions => 10}
    #submit
      = submit_tag 'Save Changes'
