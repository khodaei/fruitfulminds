- @subtitle =  "Add New Pre-Survey Results (Part 2)"

= form_for @presurvey2_fields, :url => {:action => :create} do |f|

  = label :presurveys2, :school, 'School'
  %select{:name => "school"}
    - @all_schools.each do |school|
      %option= school.name

  <br />
  - 6.times do |i|
    = label :presurveys2, "section_#{i + 1}", "Section #{i + 1}"
    = f.text_field "section_#{i + 1}"
    <br />

  - 10.times do |i|
    = label :presurveys2, "efficacy_#{i + 1}", "Efficacy #{i + 1}"
    = f.text_field "efficacy_#{i + 1}"
    <br />

  = submit_tag 'Save Changes'
